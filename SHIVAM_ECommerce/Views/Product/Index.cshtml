@{
    ViewBag.Title = "Product";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"> <i class="fe fe-box"></i> Products</h3>
                <div class="flex-fill text-right">
                    <a href="/Product/Create" class="btn btn-success"> <i class="fa fa-plus"></i> Add New Product</a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-outline table-vcenter text-nowrap card-table data-table">
                        <tr>
                            <th>Product Name</th>
                            <th>Product Size</th>
                            <th>Product Color</th>
                            <th>Product Quantity</th>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="card-footer text-right">
                 
            </div>
        </div>
         
    </div>
     
     
</div>

