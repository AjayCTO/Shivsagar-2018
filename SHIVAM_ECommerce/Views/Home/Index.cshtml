@{
    ViewBag.Title = "Home Page";
    var _CurrentUser = Session["CurrentUserContext"] as SHIVAM_ECommerce.ViewModels.CurrentUserContext;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row page-titles">


    <div class="col-md-5 align-self-center">
        <h3 class="text-primary">Dashboard</h3>
    </div>
    <div class="col-md-7 align-self-center">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
            <li class="breadcrumb-item active">Dashboard</li>
        </ol>
    </div>
</div>
<!-- End Bread crumb -->
<!-- Container fluid  -->
<div class="container-fluid">
    <!-- Start Page Content -->
    <div class="row">
        <div class="col-md-4">
            <div class="card p-30">
                <div class="media">
                    <div class="media-left meida media-middle">
                        <span><i class="fa fa-usd f-s-40 color-primary"></i></span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2>@ViewBag.OrdersCount</h2>
                        <p class="m-b-0">Total Orders</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card p-30">
                <div class="media">
                    <div class="media-left meida media-middle">
                        <span><i class="fa fa-archive f-s-40 color-warning"></i></span>
                    </div>
                    <div class="media-body media-text-right">
                        @if (_CurrentUser.IsSuperAdmin == true)
                        {
                        <h2>@ViewBag.SupplierCount</h2>    
                            <p class="m-b-0">Suppliers</p>
                        }
                        else
                        {
                        <h2>@ViewBag.ProductCount</h2>    
                            <p class="m-b-0">Products</p>    
                        }
                        
                        
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-30">
                <div class="media">
                    <div class="media-left meida media-middle">
                        <span><i class="fa fa-users f-s-40 color-danger"></i></span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2>@ViewBag.CustomerCount</h2>
                        <p class="m-b-0">Customer</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row bg-white m-l-0 m-r-0 box-shadow ">

        <!-- column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Recent Customers</h4>
@if (Request.IsAuthenticated)
     {

                    <table id="myTable" class="table table-striped table-bordered dt-responsive">
                        <thead>
                            <tr>
                                <th>User Name</th>
                                <th>Name</th>
                                <th>Phone Number</th>
                                <th>Email</th>

                            </tr>
                        </thead>
                    </table>
}
                </div>
            </div>
        </div>
        <!-- column -->
        <!-- column -->
        
        <!-- column -->
    </div>
 
</div>

    @section scripts{


<script>

    var dataTableObj;

    $(document).ready(function () {
        dataTableObj = $("#myTable").DataTable({
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "ajax": {
                "url": "/Customer/LoadData",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [

                     {

                         "data": "UserName", "name": "UserName", "autoWidth": true
                     },
                      {

                          "data": "FullName", "name": "FullName", "autoWidth": true
                      },
                       {

                           "data": "Phone", "name": "Phone", "autoWidth": true
                       },
                       {

                           "data": "Email", "name": "Email", "autoWidth": true
                       },
                    
                  
            ]
        });
    });

    </script>

}