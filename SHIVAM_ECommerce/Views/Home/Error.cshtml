@{
    ViewBag.Title = "Error";
    var _Exception = ViewBag.Message as Exception;
}
<div class="container-fluid" style="min-height:500px">
    <div class="error-page" id="wrapper">
        <div class="error-box">
            <div class="error-body text-center">
                <h2>Well this is embarrassing. ShivaSaagarOnline is having trouble to getting your desired data.</h2>
                <h3  style="color:red">
                    @if (_Exception != null)
                    {
                        <text> Message:</text> @_Exception.Message <br />

                        if (_Exception.InnerException != null)
                        {
                            <text> InnerException:</text> @_Exception.InnerException.Message.ToString()

                        }
                    }
                </h3>
                <p class="text-muted m-t-30 m-b-30">Please try after some time</p>
                <a class="btn btn-info btn-rounded waves-effect waves-light m-b-40" href="/">Back to home</a>
            </div>
        </div>
    </div>
</div>