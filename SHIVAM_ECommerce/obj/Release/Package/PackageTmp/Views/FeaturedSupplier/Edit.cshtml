
@model SHIVAM_ECommerce.Models.FeaturedSupplier

@{
    ViewBag.Title = "Edit";
}
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/FeaturedSupplier">Featured Supplier</a>
    </li>
    <li class="breadcrumb-item active">Featured Supplier Update</li>
</ol>

<div class="card">
    <div class="card-header">
        <h3 class="card-title"><i class="fa fa-pencil"></i> Update  Featured Supplier</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Edit", "FeaturedSupplier", FormMethod.Post,
                            new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.ImagePath)
                @Html.HiddenFor(model => model.CreatedDate)

                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(model => model.SupplierID, "SupplierID", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("SupplierID", String.Empty)
                        @Html.ValidationMessageFor(model => model.SupplierID)
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">  Offer Message </label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.OfferMessage, new { @class = "form-control col-md-5" })
                        @Html.ValidationMessageFor(model => model.OfferMessage)
                    </div>
                </div>

              


                <div class="form-group">
                    @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Description, new { @class = "form-control col-md-5" })
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Notes, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Notes, new { @class = "form-control col-md-5" })
                        @Html.ValidationMessageFor(model => model.Notes)
                    </div>
                </div>
                <div class="col-md-4">

                    <h4>Update Image</h4>


                    @if (Model.ImagePath != null)
                    {
                        <img style="height:100px; width:100px;" id="SupplierImage" src="@Url.Content("~/FeaturedImages/" + Model.ImagePath)" alt="Alternate Text" />
                        <br /><br />
                        <button type="button" class="btn btn-danger removeImage" onclick="RemoveImage()"><i class="fa fa-times"></i> Remove Image</button>
                    }


                    @if (Model.ImagePath == null)
                    {
                        <img style="height:100px; width:100px;" src="@Url.Content("~/FeaturedImages/no-image.png")" alt="Alternate Text" />
                    }




                    <div class="form-group">

                        <div class="col-md-10">
                            <label for="file">Upload Image:</label>
                            @*<input type="file" name="file" id="file" style="width: 100%;" />*@
                            <div class="custom-file">
                                <input type="file" class="custom-file-input form-control" name="file" id="file" >
                                <label class="custom-file-label">Choose file</label>
                            </div>
                            <div class="gallery"></div>
                        </div>


                    </div>


                </div>





                <div class="form-group">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary btn-space"> <i class="fa fa-check"></i> Update</button>
                        <a class="btn btn-secondary btn-gray" href="/FeaturedSupplier"><i class="fa fa-times"></i> Cancel</a>
                    </div>

                </div>
            </div>
        }
    </div>

</div>

@section Scripts {

<style>
    /*.removeImage {
        position: absolute;
        height: 30px;
        width: 30px;
        border-radius: 100%;
        padding: 0px !important;
        text-align: center;
        top: 33px;
        right: 236px;
    }*/
</style>

    <script>
        $("select").addClass("form-control col-md-5")
        function RemoveImage() {
            $("#SupplierImage").remove();
            $(".removeImage").hide();
            $("#ImagePath").val("");
        }
    </script>

    @Scripts.Render("~/bundles/jqueryval")
}